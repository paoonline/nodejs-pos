<div class="panel" style="margin: 20px">
    <div class="heading">
        <i class="icon mif-users"></i>
        <span class="title">ผู้ใช้งานระบบ</span>
    </div>
    <div class="content" style="padding: 20px">
        <a class="shortcut-button bg-blue fg-white" href="/userForm">
            <i class="icon mif-plus"></i>
            <span class="label">เพิ่มรายการ</span>
        </a>
        <table class="table bordered">
            <thead>
                <tr>
                    <th width="50x">ลำดับ</th>
                    <th>ชื่อ</th>
                    <th>ระดับ</th>
                    <th width="100x">ลำดับ</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td>
                            <%= n++ %>
                        </td>
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.level %>
                        </td>
                        <td class="align-center">
                            <a href="/userEdit?id=<%= user._id %>">
                                <i class="mif-pencil mif-2x fg-teal"></i>
                            </a>
                            <a href="/userDelete?id=<%= user._id %>">
                                <i class="mif-cross mif-2x fg-red"></i>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</div>